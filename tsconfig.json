{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Additional type safety */
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    /* Web Components */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    /* Performance optimizations */
    "incremental": true,
    "composite": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/styles/*": ["src/styles/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src", "stories"],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "scripts",
    "**/*.cy.ts",
    "**/*.e2e.cy.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "cypress",
    "node_modules/@types/node/test.d.ts",
    "node_modules/ast-types/**/*"
  ],
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./packages/uswds-wc" },
    { "path": "./packages/uswds-wc-core" },
    { "path": "./packages/uswds-wc-actions" },
    { "path": "./packages/uswds-wc-forms" },
    { "path": "./packages/uswds-wc-navigation" },
    { "path": "./packages/uswds-wc-data-display" },
    { "path": "./packages/uswds-wc-feedback" },
    { "path": "./packages/uswds-wc-layout" },
    { "path": "./packages/uswds-wc-structure" }
  ]
}
