{
  "name": "@uswds-wc/forms",
  "version": "2.3.0",
  "description": "USWDS Form Components - Web Components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@uswds-wc/core": "workspace:*"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@uswds-wc/test-utils": "workspace:*",
    "jsdom": "27.0.1",
    "lit": "^3.0.0",
    "vitest": "3.2.4"
  },
  "keywords": [
    "uswds",
    "web-components",
    "forms",
    "input",
    "date-picker",
    "combo-box"
  ],
  "author": "Barbara Miles",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barbaradenney/uswds-wc.git",
    "directory": "packages/uswds-wc-forms"
  }
}
