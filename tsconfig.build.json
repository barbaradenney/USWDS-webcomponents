{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.cy.ts",
    "cypress/**/*",
    "__tests__/**/*",
    "scripts/**/*",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false
  }
}